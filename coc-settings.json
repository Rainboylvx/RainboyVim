{
  "suggest.noselect": false,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": { "directory": "/tmp/ccls/cache" },
         //"compilationDatabaseDirectory":"/home/rainboy/RainboyVim/extra",
         "clang": { "extraArgs": ["-DLOCAL","-DDEBUG"]}
         // 如果使用noi_cpp_tools库 请注释上面那句话，并反注释下面这个句，并改写对应的路径
         //"clang": { "extraArgs": ["-DLOCAL","-DDEBUG","-include","/home/rainboy/mycode/noi_cpp_tools/cpp_tools.h"]}
       }
    }
  },
  "python.linting.pylintArgs": ["--rcfile","/home/rainboy/RainboyVim/extra/pylint.conf"],
  "typescript.showUnused":false,
  "tsserver.typingsCacheLocation": "/home/rainboy/.config/types/",
  //"tsserver.disableAutomaticTypeAcquisition":true,
  "tsserver.npm": "/usr/bin/npm",
  //"tsserver.log": "verbose"
  "suggest.floatEnable": false,
  "suggest.snippetIndicator":"  \uf942",
  "git.addedSign.text": "▐",
  "git.changedSign.text": "▐",
  "git.removedSign.text": "▐",
  "git.topRemovedSign.text": "▐",
  "git.changeRemovedSign.text": "▐",
  "suggest.noselect": false,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",
  "diagnostic.checkCurrentLine": true

}
